<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_daily_item_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:transitionName="translate_view" />

        <TextView
            android:id="@+id/tv_daily_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_daily_item_image"
            android:layout_weight="1"
            android:maxLines="2"
            android:text=""
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_daily_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_daily_item_image"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_daily_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_daily_item_image"
            android:layout_marginRight="10dp"
            android:textStyle="italic"
            android:layout_toLeftOf="@id/tv_daily_item_date"
            android:textSize="13sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
